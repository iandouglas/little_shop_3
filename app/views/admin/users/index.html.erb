<% flash.each do |type, message|  %>
<%= content_tag :div, message, class: type %>
<% end %>
<h1>List of Users</h1>

<% @users.each do |user| %>
<% unless user.admin? %>
<section id="user-<%= user.id %>">
  <%= link_to "#{user.username}", admin_user_path(user) %>
  <p>Registration Date: <%= user.created_at %></p>
  <% if user.active? %>
    <%= link_to 'Disable', admin_user_disable_path(user) %>
  <% else %>
    <%= link_to 'Enable', admin_user_enable_path(user) %>
  <% end %>
  <p>=============================================</p>
</section>
<% end %>
<% end %>
