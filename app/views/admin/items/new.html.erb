<%= form_for @item do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.number_field :price, min: 0.00, step: :any %>

  <%= f.label :stock %>
  <%= f.number_field :stock, min: 0 %>

  <%= f.hidden_field :user_id, :value => params[:format] %>

  <%= f.submit %>
<% end %>
