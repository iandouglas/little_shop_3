
<% @items.each do |item| %>
<section class="items-index" id="item-<%= item.id %>">
  <%= item.name %>
  <%= item.image %>
  <%= item.user.username %>
  <%= number_to_currency(item.price) %>
  <p>Stock: <%= item.stock %></p>
  <p>Subtotal: <%= number_to_currency(@cart.subtotal(item)) %> </p>
  <% end %>
<h3>Grand Total: <%= number_to_currency(@cart.grand_total) %> </h3>
  </section>
<% if @cart.get_items == [] %>
  <h2><%= "Your cart is empty." %></h2>
<% else %>
  <%= link_to "Empty Cart", empty_cart_path %>
<% end %>
<%= link_to "Checkout", checkout_path %>
