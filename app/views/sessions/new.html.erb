<% flash.each do |type, message|  %>
<%= content_tag :div, message, class: type %>
<% end %>

<%= form_tag login_path do %>
  <p><%= label_tag :email %></p>
  <p><%= text_field_tag :email %></p>
  <p><%= label_tag :password %></p>
  <p><%= password_field_tag :password %></p>
  <p><%= submit_tag "Log in" %></p>
<% end %>
